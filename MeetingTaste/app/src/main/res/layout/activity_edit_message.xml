<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/edit_message_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/back"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改资料                        "
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="80dp"

        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:alpha="0.7"
        android:id="@+id/edit_message_wrapper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_message_back"
        android:background="@drawable/border"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >
        <LinearLayout
            android:id="@+id/edit_message_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/edit_message_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="名字"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_message_sex_wrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/sex"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  |  "
                android:textSize="20dp"
                />
            <RadioGroup
                android:id="@+id/edit_message_sex_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/edit_message_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/edit_message_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:checked="false"
                    android:layout_marginLeft="20dp"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_message_second_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/secondname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/edit_message_second_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="电话"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textSize="18dp"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/edit_message_picture"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/edit_message_picture_message"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:hint="头像路径"

                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textSize="15dp"
                android:singleLine="true"
                android:ellipsize="start"
                android:ems="8"
                />

            <Button
                android:id="@+id/edit_message_choose_picture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="2dp"
                android:text="选择图片"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_message_city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/place"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/edit_message_city_message"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:hint="城市"

                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textSize="15dp"
                android:singleLine="true"
                android:ellipsize="start"
                android:ems="8"
                />

            <Button
                android:id="@+id/edit_message_choose_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="2dp"
                android:text="选择城市"

                />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/edit_message_story_wrapper"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/book"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:layout_marginTop="-30dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_message_story"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="详细描述"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border"
                android:textSize="18dp"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/edit_message_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/people_detail_camp_background"
        android:layout_below="@id/edit_message_wrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="提交"
        android:textColor="@color/colorWhite"

        />
</RelativeLayout>