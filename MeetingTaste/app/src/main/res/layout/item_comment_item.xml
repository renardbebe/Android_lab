<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:minHeight="60dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_comment_item_user_icon"
        android:layout_marginLeft="10dp"
        android:src="@drawable/loading"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/item_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_comment_item_user_icon"
        android:text="testName"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/item_comment_item_comment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_user_name"
        android:layout_toRightOf="@id/item_comment_item_user_icon"
        android:layout_marginLeft="20dp"
        android:text="这个东西很不错"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_comment_item_comment"
        android:background="@color/colorGray"
        android:alpha="0.5"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>