<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.meetingtaste.ItemCommentList">
    <RelativeLayout
        android:id="@+id/item_comment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/item_comment_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_back"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看商品"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/item_comment_line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_below="@id/item_comment_top"
        android:alpha="0.5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/item_comment_line3"
        android:id="@+id/item_comment_item_image"
        android:scaleType="fitXY"
        android:src="@drawable/loading"
        />

    <RelativeLayout
        android:id="@+id/middle_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/item_comment_item_image"
        >
        <TextView
            android:id="@+id/item_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="五仁麦片"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/item_comment_price_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="￥"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/temp_linetemp"
            android:layout_marginRight="80dp"
            />
        <TextView
            android:id="@+id/item_comment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/temp_linetemp"
            android:text="100.00"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"

            />
        <TextView
            android:id="@+id/temp_linetemp"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/colorGray"
            android:alpha="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/item_comment_shoppingcar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_shopping_cart_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/item_comment_line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_below="@id/middle_relativeLayout"
        android:alpha="0.5"
        />
    <RelativeLayout
        android:id="@+id/item_comment_comment_top"
        android:layout_below="@id/item_comment_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="精彩评论"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_comment_top"
        android:layout_marginBottom="40dp"
        >

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/item_comment_add_comment"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="start"
            android:ems="15"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/itemt_comment_submit_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            android:background="@drawable/ic_send_black_24dp"
            />
    </RelativeLayout>
</RelativeLayout>
